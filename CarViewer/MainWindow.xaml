<Window x:Class="CarViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Car Lot — COSC2100 Assignment 2"
        Width="900" Height="520"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.ColumnSpan="2"
               Text="Car Inventory"
               FontSize="20"
               FontWeight="Bold"
               Margin="0,0,0,12"/>

        <!-- Left: Input form -->
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,16,0">
            <!-- Make -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <Label Target="{Binding ElementName=comboMake}">
                    <AccessText Text="_Make:"/>
                </Label>
                <ComboBox x:Name="comboMake" Width="220" TabIndex="0"
                  ToolTip="Choose the car's manufacturer (required)."/>
            </StackPanel>

            <!-- Model -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <Label Target="{Binding ElementName=textModel}">
                    <AccessText Text="M_odel:"/>
                </Label>
                <TextBox x:Name="textModel" Width="220" TabIndex="1"
                 ToolTip="Enter the car's model (required, not blank)."/>
            </StackPanel>

            <!-- Year -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <Label Target="{Binding ElementName=comboYear}">
                    <AccessText Text="_Year:"/>
                </Label>
                <ComboBox x:Name="comboYear" Width="220" TabIndex="2"
                  ToolTip="Select the year (last 50 years, required)."/>
            </StackPanel>

            <!-- Price -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <Label Target="{Binding ElementName=textPrice}">
                    <AccessText Text="_Price:"/>
                </Label>
                <TextBox x:Name="textPrice" Width="220" TabIndex="3"
                 ToolTip="Enter the selling price (numeric, required)."/>
            </StackPanel>

            <!-- New/Used -->
            <CheckBox x:Name="checkIsNew" Content="Is _New?" TabIndex="4"
                ToolTip="Check if the car is new; leave unchecked for used."
                Margin="0,0,0,8"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                <Button x:Name="btnEnter" Content="_Enter" Width="90" Margin="0,0,8,0"
                Click="Enter_Click" TabIndex="5"
                ToolTip="Validate and add/update the car (Alt+E)."/>
                <Button x:Name="btnReset" Content="_Reset" Width="90" Margin="0,0,8,0"
                Click="Reset_Click" TabIndex="6"
                ToolTip="Reset inputs to default (Alt+R)."/>
                <Button x:Name="btnExit" Content="E_xit" Width="90"
                Click="Exit_Click" TabIndex="7"
                ToolTip="Close the application (Alt+X)."/>
            </StackPanel>
        </StackPanel>

        <!-- Right: List of cars -->
        <GroupBox Grid.Row="1" Grid.Column="1" Header="Cars"
              ToolTip="Select a car to load its details for editing.">
            <Grid>
                <ListBox x:Name="listCars"
                 SelectionChanged="listCars_SelectionChanged"
                 TabIndex="8"
                 Margin="0"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <!-- Bind to a PROPERTY, not ToString(); updates in real-time -->
                            <TextBlock Text="{Binding Display}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </GroupBox>

        <!-- Result / validation messages -->
        <Border Grid.Row="2" Grid.ColumnSpan="2"
            Margin="0,12,0,8" Padding="8"
            BorderBrush="#DDD" BorderThickness="1">
            <TextBlock x:Name="labelResult"
                 TextWrapping="Wrap"
                 ToolTip="Status and validation messages appear here."/>
        </Border>

        <TextBlock Grid.Row="3" Grid.ColumnSpan="2"
               Opacity="0.7" FontSize="12"
               Text="Tip: Use Alt+letter access keys shown with underscores (e.g., Alt+M for Make)." />
    </Grid>
</Window>
