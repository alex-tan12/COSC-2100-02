    <Window x:Class="TicTacToe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hotseat Tic Tac Toe"
        WindowStartupLocation="CenterScreen"
        Height="560" Width="600">
    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title / Banner -->
        <TextBlock Grid.ColumnSpan="2" Text="Tic Tac Toe"
                   FontSize="32" FontWeight="Bold" Margin="0,0,0,12"/>

        <!-- Player inputs -->
        <Grid Grid.Row="1" Margin="0,0,16,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock VerticalAlignment="Center" Text="X Player" Margin="0,0,6,0"/>
            <TextBox x:Name="TxtXName" Grid.Column="1" Text="" ToolTip="Enter the X player’s name"
                     TabIndex="0" />
            <TextBlock Grid.Column="3" VerticalAlignment="Center" Text="O Player" Margin="12,0,6,0"/>
            <TextBox x:Name="TxtOName" Grid.Column="4" Text="" ToolTip="Enter the O player’s name"
                     TabIndex="1" />
        </Grid>

        <!-- Controls column (right) -->
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Vertical" Margin="12,0,0,0">
            <Button x:Name="BtnChooseStarter" Content="_Choose Starting Player" Margin="0,0,0,8"
                    ToolTip="Randomly select who goes first" Click="BtnChooseStarter_Click" TabIndex="2"/>
            <StackPanel Orientation="Vertical" Margin="0,8,0,8">
                <TextBlock Text="Current Player" FontWeight="Bold"/>
                <TextBlock x:Name="TxtCurrent" Text="X" FontSize="20" Margin="0,2,0,0"/>
            </StackPanel>

            <GroupBox Header="Score" Margin="0,8,0,8">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="X" Grid.Row="0"/>
                    <TextBlock x:Name="LblScoreX" Grid.Row="0" Grid.Column="1" Text="0"/>
                    <TextBlock Text="O" Grid.Row="1"/>
                    <TextBlock x:Name="LblScoreO" Grid.Row="1" Grid.Column="1" Text="0"/>
                    <TextBlock Text="Cats" Grid.Row="2"/>
                    <TextBlock x:Name="LblScoreCats" Grid.Row="2" Grid.Column="1" Text="0"/>
                </Grid>
            </GroupBox>

            <Button x:Name="BtnReset" Content="_Reset" Margin="0,8,0,0" Click="BtnReset_Click"
                    ToolTip="Reset just the board (not the scores)" TabIndex="3"/>
            <Button x:Name="BtnResetScores" Content="Reset _Scores" Margin="0,8,0,0" Click="BtnResetScores_Click"
                    ToolTip="Reset the board and all score counters" TabIndex="4"/>
            <Button x:Name="BtnExit" Content="E_xit" Margin="0,8,0,0" Click="BtnExit_Click"
                    ToolTip="Close the application" TabIndex="5"/>
        </StackPanel>

        <!-- 3x3 Board -->
        <UniformGrid Grid.Row="2" Grid.Column="0" Rows="3" Columns="3" Margin="0,0,16,0">
            <Button x:Name="B1" Style="{StaticResource TileStyle}" Click="Tile_Click"/>
            <Button x:Name="B2" Style="{StaticResource TileStyle}" Click="Tile_Click"/>
            <Button x:Name="B3" Style="{StaticResource TileStyle}" Click="Tile_Click"/>
            <Button x:Name="B4" Style="{StaticResource TileStyle}" Click="Tile_Click"/>
            <Button x:Name="B5" Style="{StaticResource TileStyle}" Click="Tile_Click"/>
            <Button x:Name="B6" Style="{StaticResource TileStyle}" Click="Tile_Click"/>
            <Button x:Name="B7" Style="{StaticResource TileStyle}" Click="Tile_Click"/>
            <Button x:Name="B8" Style="{StaticResource TileStyle}" Click="Tile_Click"/>
            <Button x:Name="B9" Style="{StaticResource TileStyle}" Click="Tile_Click"/>
        </UniformGrid>

        <!-- Footer -->
        <TextBlock Grid.Row="3" Grid.ColumnSpan="2" Margin="0,12,0,0"
                   Text="Tip: Use Reset to start a new round. Reset Scores clears scores."
                   Opacity="0.65"/>
    </Grid>
</Window>
